@page "/"

<PageTitle>Home</PageTitle>

<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4 mb-4">Identity Tenant Management</h1>
            <p class="lead mb-5">Manage your organization identities and access control</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm hover-card">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <span class="bi bi-building-fill-add" style="font-size: 4rem; color: var(--bs-primary);"></span>
                    </div>
                    <h3 class="card-title mb-3">Organization Onboarding</h3>
                    <p class="card-text text-muted mb-4">
                        Set up a new organization with a dedicated realm, administrator account, and initial configuration.
                    </p>
                    <a href="/onboarding" class="btn btn-primary btn-lg">
                        Get Started
                        <span class="bi bi-arrow-right ms-2"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
