@page "/onboarding"
@using KeycloakAdapter.Models
@using IdentityTenantManagement.BlazorApp.Services
@inject OnboardingApiClient OnboardingApi
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Organization Onboarding</PageTitle>

<div style="display: flex; justify-content: center; align-items: center; min-height: calc(100vh - 4rem); padding: 2rem;">
    <div style="width: 100%; max-width: 650px;">
        <div class="card" style="box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);">
            <div class="card-body" style="padding: 2.5rem;">
                <div class="text-center mb-4">
                    <svg width="64" height="64" fill="none" stroke="var(--primary)" viewBox="0 0 24 24" style="margin-bottom: 1rem;">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    <h2 class="mb-2">Organization Onboarding</h2>
                    <p class="text-muted" style="margin: 0;">Set up your organization and administrator account</p>
                </div>
                    <EditForm Model="@model" OnValidSubmit="HandleSubmit" FormName="onboardingForm">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger mb-3" />

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger" style="display: flex; align-items: center; gap: 0.5rem;">
                                <svg width="20" height="20" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                </svg>
                                <span>@errorMessage</span>
                            </div>
                        }

                        @if (isSubmitted)
                        {
                            <div class="alert alert-success" role="alert">
                                <div class="text-center">
                                    <svg width="48" height="48" fill="currentColor" viewBox="0 0 20 20" style="margin-bottom: 1rem;">
                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                    </svg>
                                    <h4 style="margin-bottom: 0.5rem;">Success!</h4>
                                    <p style="margin: 0;">Your organization has been successfully onboarded.</p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <!-- Organization Details Section -->
                            <div class="mb-5">
                                <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 1rem;">
                                    <svg width="24" height="24" fill="none" stroke="var(--primary)" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                    </svg>
                                    <h5 style="margin: 0;">Organization Details</h5>
                                </div>
                                <hr style="margin: 0.5rem 0 1.5rem 0;" />

                                <div class="mb-3">
                                    <label for="tenantName" class="form-label">Organization Name</label>
                                    <InputText id="tenantName" class="form-control" @bind-Value="model.CreateTenantModel.Name" placeholder="Acme Corporation" />
                                    <ValidationMessage For="@(() => model.CreateTenantModel.Name)" class="text-danger" />
                                </div>

                                <div class="mb-3">
                                    <label for="tenantDomain" class="form-label">Domain</label>
                                    <InputText id="tenantDomain" class="form-control" @bind-Value="model.CreateTenantModel.Domain" placeholder="acme.com" />
                                    <ValidationMessage For="@(() => model.CreateTenantModel.Domain)" class="text-danger" />
                                    <div class="form-text">Enter your organization's domain name</div>
                                </div>
                            </div>

                            <!-- Admin User Section -->
                            <div class="mb-5">
                                <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 1rem;">
                                    <svg width="24" height="24" fill="none" stroke="var(--primary)" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                    <h5 style="margin: 0;">Administrator Account</h5>
                                </div>
                                <hr style="margin: 0.5rem 0 1.5rem 0;" />

                                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1rem;">
                                    <div>
                                        <label for="firstName" class="form-label">First Name</label>
                                        <InputText id="firstName" class="form-control" @bind-Value="model.CreateUserModel.FirstName" placeholder="John" />
                                        <ValidationMessage For="@(() => model.CreateUserModel.FirstName)" class="text-danger" />
                                    </div>

                                    <div>
                                        <label for="lastName" class="form-label">Last Name</label>
                                        <InputText id="lastName" class="form-control" @bind-Value="model.CreateUserModel.LastName" placeholder="Doe" />
                                        <ValidationMessage For="@(() => model.CreateUserModel.LastName)" class="text-danger" />
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="username" class="form-label">Username</label>
                                    <InputText id="username" class="form-control" @bind-Value="model.CreateUserModel.UserName" placeholder="johndoe" />
                                    <ValidationMessage For="@(() => model.CreateUserModel.UserName)" class="text-danger" />
                                </div>

                                <div class="mb-3">
                                    <label for="email" class="form-label">Email Address</label>
                                    <InputText id="email" type="email" class="form-control" @bind-Value="model.CreateUserModel.Email" placeholder="john.doe@acme.com" />
                                    <ValidationMessage For="@(() => model.CreateUserModel.Email)" class="text-danger" />
                                </div>

                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <InputText id="password" type="password" class="form-control" @bind-Value="model.CreateUserModel.Password" />
                                    <ValidationMessage For="@(() => model.CreateUserModel.Password)" class="text-danger" />
                                    <div class="form-text">Must be at least 8 characters long</div>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div style="margin-bottom: 1rem;">
                                <button type="submit" class="btn btn-primary btn-lg" style="width: 100%;" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm" style="margin-right: 0.5rem;" role="status" aria-hidden="true"></span>
                                        <span>Submitting...</span>
                                    }
                                    else
                                    {
                                        <span>Complete Onboarding</span>
                                    }
                                </button>
                            </div>
                        }
                    </EditForm>
                </div>
            </div>
        </div>
    </div>

@code {
    private TenantUserOnboardingModel model = new();
    private bool isSubmitting = false;
    private bool isSubmitted = false;
    private string errorMessage = string.Empty;

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = string.Empty;

        try
        {
            var success = await OnboardingApi.OnboardOrganisationAsync(model);

            if (success)
            {
                isSubmitted = true;
                StateHasChanged();

                // Wait a moment to show success message, then redirect
                await Task.Delay(2000);
                Navigation.NavigateTo("/");
            }
            else
            {
                errorMessage = "Failed to onboard organization. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}